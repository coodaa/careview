<div class="container">

  <div class="carehome-infos">
    <h2><%= @carehome.name %></h2>
    <%= link_to 'Back', url_for(:back), class: 'btn-back' %>
  </div>

  <h5><%= pluralize @carehome.reviews.size, "Review" %></h5>
  <div>
    <% @carehome.reviews.each do |review| %>




    <div class="card-product">
        <%= image_tag review.user.image_url, class: "avatar" %>

      <div class="card-product-infos">




     <b> <%= review.user.first_name %>
      <%= review.user.last_name %> </b><br>
      <em class="small-grey"><%= review.created_at.strftime("%B %d, %Y") %></em><br>
      <i><%= review.content %></i>
      <%# <i><%= review.rating %></i>

      </div>
    </div>
    <%end%>
  </div>
</div>
