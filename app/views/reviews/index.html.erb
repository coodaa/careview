<div class="container" data-controller="insert-in-list">
  <h2><%= pluralize @carehome.reviews.size, "Review" %></h2>
  <div data-insert-in-list>
    <% @carehome.reviews.each do |review| %>
      <li><i><%= review.content %></i>
          <i><%= review.rating %></i>
      </li>
    <%end %>
  </div>
  <%= render "shared/reviewforms" %>
</div>
