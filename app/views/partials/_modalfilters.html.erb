<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Select filters</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <%= form_tag carehomes_path, method: :get, data: { turbo: false }, class: "form-horizontal" do %>
            <%= check_box_tag :wifi, params[:wifi], class: "form-control" %>
            <%= label_tag 'wifi', 'Wifi', class: 'control-label' %>
            <%= check_box_tag :bar, params[:bar], class: "form-control" %>
            <%= label_tag 'bar', 'Bar', class: 'control-label' %>
            <%= hidden_field_tag 'query', params[:query] %>
            <div class="modal-footer">
              <%= submit_tag "Save changes", name: nil, class: "btn btn-primary" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
